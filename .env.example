# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# REQUIRED in production - MongoDB connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/telebot-hoster?retryWrites=true&w=majority

# Session Secret (Generate a random string)
# Will be auto-generated by Render if not set
SESSION_SECRET=your-super-secret-session-key-change-this

# Admin Credentials
# REQUIRED in production - Application will not start without these
# Use strong values and never commit to repository
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-strong-password

# Developer Contact
DEVELOPER_CONTACT=t.me/your_telegram_username

# Optional: For database backup/migration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/telebot-hoster?retryWrites=true&w=majority
